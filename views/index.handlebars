    <div class="col-md-5ths col-sm-5ths col-xs-5ths content-columns">
        {{#each container}} 
      
          {{!-- ***** PUBLICATION ***** --}}
          {{!-- ***** PUBLICATION ***** --}}
          {{!-- ***** PUBLICATION ***** --}}
          {{!-- ***** PUBLICATION ***** --}}
      
          {{#if this.publisher}}
            <div class='space'>*</div>
            <a href="" class="slide-down-link">
                <article class="exhibition light ">
                    <div class="title">{{this.title}}</div>
                    <div class="author">{{this.author}}</div>
                    <div class="publisher">{{this.publisher}}</div>
                </article>
            </a>

            <div class="thumb-container static">

                {{#if this.sound.size}}
                    <div class="audio-control play">
                      <i class="fa fa-play play-icon"></i>
                      <i class="fa fa-stop stop-icon"></i> {{this.sound.size}} kb
                    </div>
                    <audio loop>
                        <source src="{{this.sound.url}}">
                    </audio>
                {{/if}}

                {{#if this.image.thumb}}
                    <img src="{{this.image.thumb}}"
                         data-large="{{this.image.large}}"
                         data-pinky="{{this.image.pinkynail}}"
                         class="thumbnail lightBox"> 
                {{/if}} 

                {{#if this.link}}
                    <div class='link-container'>
                        <a href="{{this.link}}"> >> External link << </a>
                    </div>
                {{/if}}

