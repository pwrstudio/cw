<div id="imageContainer">
  <img src="1.jpg" class="draggable small">
  <img src="2.jpg" class="draggable small">
  <img src="3.jpg" class="draggable small">
  <img src="4.jpg" class="draggable small">
  <img src="5.jpg" class="draggable small">
  <img src="9.jpg" class="draggable small">
</div>

<div class="container">

  <section id="colOne">
    <article class="exhibition light ">
      <div class="title ">{{distance}} km from server</div>
    </article>
    {{{space}}}
  </section>

  <section id="colTwo">
    <article class="exhibition light">
      <div class="title ">Exhibitions</div>
    </article>
    {{#each exhibition}} {{{space}}}
    <article class="exhibition light ">
      <div class="title">{{this.title}}</div>
      <div class="date">{{this.start_date}} â€” {{this.end_date}}</div>
      <div class="location">{{this.location}}</div>
    </article>
    {{/each}}
  </section>

  <section id="colThree">
    <article class="exhibition light ">
      <div class="title ">Publications</div>
    </article>
    {{#each publication}} {{{space}}}
    <article class="exhibition light ">
      <div class="title">{{this.title}}</div>
      <div class="date">{{this.start_date}}</div>
      <div class="published">{{this.publisher}}</div>
    </article>
    {{/each}}
  </section>

  <section id="colFour">
    <article class="exhibition light ">
      <div class="title ">Texts</div>
    </article>
    {{#each text}} {{{space}}}
    <article class="exhibition light ">
      <div class="title">{{this.title}}</div>
      <div class="date">{{this.start_date}}</div>
      <div class="published">{{this.publisher}}</div>
    </article>
    {{/each}}
  </section>

</div>