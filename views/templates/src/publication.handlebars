<div class="list-group sortable-publication">
  {{#each this}}

  <div data-i="{{_id}}" class="sort-container publication">

    {{#if publisher}}
    <a href="#" id="{{_id}}" class="list-group-item slider set-height" data-toggle="collapse-next">
      <div>
        <i class="fa fa-book"></i> <strong>{{title}}</strong>
      </div>
      <div>
        <em>{{publisher}}</em>
      </div>
      <div>{{start_date_pretty}}</div>
    </a>
    <div class="collapse editContainer">
      <form class="ajaxFormUpdate" enctype="multipart/form-data" action="/api/update/publication" data-post-id="{{_id}}">
        <fieldset>
          <div class="form-group">
            <label for="title">Title</label>
            <div>
              <input id="title" name="title" type="text" class="input-sm form-control" value="{{title}}" required>
            </div>
          </div>

          <div class="form-group">
            <label for="publisher">Publisher</label>
            <div>
              <input id="publisher" name="publisher" type="text" class="input-sm form-control" value="{{publisher}}">
            </div>
          </div>

          <div class="form-group">
            <label for="link">Link</label>
            <div>
              <input id="link" name="link" type="url" class="input-sm form-control" value="{{link}}">
            </div>
          </div>

          <div class="form-group">
            <label for="input-group">Publication year</label>
            <div>
              <input type="text" class="input-sm form-control" name="start_date" value="{{start_date_pretty}}" required>
            </div>
          </div>

          {{#each text}}
            <div class="form-group">
              <i class="fa fa-file-pdf-o fa-2x"></i>
              <a href="{{this.url}}"><strong>{{this.caption}}</strong></a>
            </div>
          {{/each}} 
          
          {{#each image}}
            <div class="form-group">
              <label><i class="fa fa-file-image-o fa-2x"></i> {{this.caption}}</label>
              <img src="{{this.thumb}}" class="thumbnail">
            </div>  
          {{/each}} 
          
          {{#each sound}}
            <div class="form-group">
              <label><i class="fa fa-file-audio-o fa-2x"></i> {{this.caption}}</label>
              <audio controls>
                <source src="{{this.url}}">
              </audio>
            </div>
          {{/each}}

          <div class="form-group">
            <div>
              <button id="" name="" class="btn btn-primary">Update</button>
              <div class="btn btn-danger delete cont" data-id="{{_id}}">Delete</div>
            </div>
          </div>

        </fieldset>
      </form>
    </div>
    {{/if}}
  </div>
  {{/each}}
</div>