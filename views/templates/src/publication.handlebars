<div class="list-group">
    {{#each this}} 
    
      {{#if publisher}}
        <a href="#" id="{{_id}}" class="list-group-item slider" data-toggle="collapse-next">
            <div>
              <i class="fa fa-book"></i> <strong>{{title}}</strong>
            </div>
              <div>
                <em>{{publisher}}</em>
              </div>
            <div>{{start_date_pretty}}</div>
        </a>
      {{/if}}      
  
      {{#if text.url}}
        <a href="#" id="{{_id}}" class="list-group-item slider" data-toggle="collapse-next">
              <div>
                <i class="fa fa-pencil"></i> <strong>{{title}}</strong>
              </div>
              <div>{{start_date_pretty}}</div>
          </a>
      {{/if}}
  
      {{#if publisher}}
        <div class="collapse editContainer">
          <form class="ajaxFormUpdate" enctype="multipart/form-data" action="/api/update/publication" data-post-id="{{_id}}">
            <fieldset>
                <div class="form-group">
                    <label for="title">Title</label>
                    <div>
                        <input id="title" name="title" type="text" class="input-sm form-control" value="{{title}}" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="publisher">Publisher</label>
                    <div>
                        <input id="publisher" name="publisher" type="text" class="input-sm form-control" value="{{publisher}}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="link">Link</label>
                    <div>
                        <input id="link" name="link" type="url" class="input-sm form-control" value="{{link}}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="input-group">Publication year</label>
                    <div>
                        <input type="text" class="input-sm form-control" name="start_date" value="{{start_date_pretty}}" required>
                    </div>
                </div>

                {{#if image.thumb}}
                  <div class="form-group">
                    <label for="link">Image</label>
                    <img src="{{image.thumb}}" class="thumbnail">
                </div>
                {{/if}} 
              
                {{#if sound.url}}
                  <div class="form-group">
                    <label for="link">Sound</label>
                    <audio controls>
                        <source src="{{sound.url}}">
                    </audio>
                </div>
                {{/if}}

                <div class="form-group">
                    <div>
                        <button id="" name="" class="btn btn-primary">Update</button>
                        <div class="btn btn-danger delete cont" data-id="{{_id}}">Delete</div>
                    </div>
                </div>

            </fieldset>
          </form>
        </div>
      {{/if}}

      {{#if text.url}}
        <div class="collapse editContainer">
          <form class="ajaxFormUpdate" role="form" method="PUT" enctype="multipart/form-data" action="/api/text/update/" data-post-id="{{_id}}">
            <fieldset>
              
                <div class="form-group">
                    <label for="title">Title</label>
                    <input id="title" name="title" type="text" placeholder="Title" value="{{title}}" class="input-sm form-control" required>
                </div>

                <div class="form-group">
                    <label for="author">Author</label>
                    <input id="author" name="author" type="text" placeholder="Author" value="{{text.author}}" class="input-sm form-control" required>
                </div>

                <div class="form-group">
                    <label for="input-group">Year</label>
                    <input class="input-sm form-control" type="text" name="year" value="{{year}}" required>
                </div>
              
                <div class="form-group">
                  <label for="caption">Caption</label>
                  <textarea id="caption" name="caption" type="text" class="input-sm form-control"></textarea>
                </div>

                <div class="form-group">
                  <div>
                      <label for="link">Textfile</label>
                  </div>
                  <a href="{{text.url}}" target=_blank>{{text.url}}</a>
                </div>
                
                <div class="form-group">
                    Public {{#if public}}
                    <input type="checkbox" name="public" value="public" checked> {{/if}} {{#unless public}}
                    <input type="checkbox" name="public" value="public"> {{/unless}}
                </div>

                <div class="form-group">
                    <button id="textSubmit" type="submit" class="btn btn-primary">Submit</button>
                    <div class="btn btn-danger delete text" data-id="{{_id}}">Delete</div>
                </div>

            </fieldset>
          </form>
        </div>
      {{/if}}
  
    {{/each}}
</div>
