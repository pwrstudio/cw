<div class="list-group sortable-content">
    {{#each this}}
    
      <div data-i="{{_id}}" class="sort-container content">
      <a href="#" id="{{_id}}" class="list-group-item slider set-height">

        {{#if image}}
              <p>
                <i class="fa fa-file-image-o"></i> <strong>{{title}}</strong>
              </p>
              <img src="{{image.thumb}}">
          {{/if}}         

        {{#if audio}}
            <p>
              <i class="fa fa-file-audio-o"></i> <strong>{{title}}</strong>
            </p>
        {{/if}}       

        {{#if video}}
            <p>
              <i class="fa fa-file-video-o"></i> <strong>{{title}}</strong>
            </p>
        {{/if}} 


      </a>
      <div class="editContainer">

          {{#if image}}

          <a href="{{image.url}}" class='btn btn-primary full-size-image'>View full size image</a>

          <form action="/api/content/update/image" class="ajaxFormUpdate" method="POST" enctype="multipart/form-data" data-post-id="{{_id}}">

              <fieldset>

                  <div class="form-group">
                      <label for="title">Title</label>
                      <input id="title" name="title" type="text" class="input-sm form-control" required value="{{title}}">
                  </div>

                  <label for="input-group">Year</label>
                  <div class="form-group">
                      <input type="text" class="input-sm form-control" name="year" id="year" value="{{year}}" required>
                  </div>

                  <div class="form-group">
                      <label for="caption">Caption</label>
                      <textarea id="caption" name="caption" type="text" class="input-xl form-control">{{image.caption}}</textarea>
                  </div>

                  <div class="form-group">

                      Public 

                      {{#if public}}
                          <input type="checkbox" name="public" value="public" checked>
                      {{/if}} 

                      {{#unless public}}
                          <input type="checkbox" name="public" value="public"> 
                      {{/unless}}
                  </div>

                  <div class="form-group">

                      Frontpage image 

                      {{#if image.frontpage}}
                          <input type="checkbox" name="frontpage" value="frontpage" checked> 
                      {{/if}} 

                      {{#unless image.frontpage}}
                          <input type="checkbox" name="frontpage" value="frontpage">
                      {{/unless}}

                  </div>

                  <div class="form-group">
                      <input type="submit" class="btn btn-primary" value="Update">
                      <div class="btn btn-danger delete image" data-id="{{_id}}">Delete</div>
                  </div>

              </fieldset>
          </form>

          {{/if}} 

          {{#if audio}}
          <form class="ajaxFormUpdate" role="form" method="PUT" enctype="multipart/form-data" action="/api/content/update/audio" data-post-id="{{_id}}">
              <fieldset>

                  <div class="form-group">
                      <label for="title">Title</label>
                      <input id="title" name="title" type="text" placeholder="Title" value="{{title}}" class="input-sm form-control" required>
                  </div>

                  <div class="form-group">
                      <label for="input-group">Year</label>
                      <input class="input-sm form-control" type="text" name="year" value="{{year}}" required>
                  </div>

                  <div class="form-group">
                    <label for="text">Caption</label>
                    <textarea class="input-sm form-control" name="caption">{{audio.caption}}</textarea>
                  </div>

                  <div class="form-group">
                    <label for="link">Sound</label>
                    <audio controls>
                        <source src="{{audio.url}}">
                    </audio>
                  </div>

                  <div class="form-group">
                      Public {{#if public}}
                      <input type="checkbox" name="public" value="public" checked> {{/if}} {{#unless public}}
                      <input type="checkbox" name="public" value="public"> {{/unless}}
                  </div>
                
                  <div class="form-group">

                      Frontpage

                      {{#if audio.frontpage}}
                          <input type="checkbox" name="frontpage" value="frontpage" checked> 
                      {{/if}} 

                      {{#unless audio.frontpage}}
                          <input type="checkbox" name="frontpage" value="frontpage">
                      {{/unless}}

                  </div>

                  <div class="form-group">
                      <button id="textSubmit" type="submit" class="btn btn-primary">Submit</button>
                      <div class="btn btn-danger delete audio" data-id="{{_id}}">Delete</div>
                  </div>

              </fieldset>
          </form>

          {{/if}}

          {{#if video}}
          <form class="ajaxFormUpdate" role="form" method="PUT" enctype="multipart/form-data" action="/api/content/update/video" data-post-id="{{_id}}">
              <fieldset>

                  <div class="form-group">
                      <label for="title">Title</label>
                      <input id="title" name="title" type="text" placeholder="Title" value="{{title}}" class="input-sm form-control" required>
                  </div>

                  <div class="form-group">
                      <label for="input-group">Year</label>
                      <input class="input-sm form-control" type="text" name="year" value="{{year}}" required>
                  </div>

                  <div class="form-group">
                    <label for="text">Caption</label>
                    <textarea class="input-sm form-control" name="caption">{{video.caption}}</textarea>
                  </div>

                  <div class="form-group">
                    <label for="link">Video</label>
                    <video controls>
                        <source src="{{video.url}}">
                    </video>
                  </div>

                  <div class="form-group">
                      Public {{#if public}}
                      <input type="checkbox" name="public" value="public" checked> {{/if}} {{#unless public}}
                      <input type="checkbox" name="public" value="public"> {{/unless}}
                  </div>
                
                  <div class="form-group">

                      Frontpage

                      {{#if video.frontpage}}
                          <input type="checkbox" name="frontpage" value="frontpage" checked> 
                      {{/if}} 

                      {{#unless video.frontpage}}
                          <input type="checkbox" name="frontpage" value="frontpage">
                      {{/unless}}

                  </div>

                  <div class="form-group">
                      <button id="textSubmit" type="submit" class="btn btn-primary">Submit</button>
                      <div class="btn btn-danger delete video" data-id="{{_id}}">Delete</div>
                  </div>

              </fieldset>
          </form>

          {{/if}}
      </div>
    </div>
    {{/each}}
</div>
