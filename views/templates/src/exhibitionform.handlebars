<form class="ajaxForm" enctype="multipart/form-data" action="/api/exhibition">
    <fieldset>

        <div class="form-group">
            <label for="title">Title</label>
            <input id="title" name="title" type="text" class="input-sm form-control" required>
        </div>

        <div class="form-group">
            <label for="location">Location</label>
            <input id="location" name="location" type="text" class="input-sm form-control" required>
        </div>

        <div class="form-group">
            <label for="link">Link</label>
            <input id="link" name="link" type="url" class="input-sm form-control">
        </div>

        <div class="form-group">
            <label for="datepicker">Start and end date</label>
            <div class="input-daterange input-group" id="datepicker">
                <input type="text" class="input-sm form-control" name="start_date" required>
                <span class="input-group-addon">to</span>
                <input type="text" class="input-sm form-control" name="end_date" required>
            </div>
        </div>

        <div class="form-group">
            <div class="radio">
                <label for="radios-0">
                    <input type="radio" name="radios" id="radios-solo" value="solo" checked="checked"> Soloshow
                </label>
            </div>
            <div class="radio">
                <label for="radios-1">
                    <input type="radio" name="radios" id="radios-group" value="group"> Groupshow
                </label>
            </div>
        </div>

        <div class="form-group">
            <button id="" name="" class="btn btn-primary">Submit</button>
        </div>

    </fieldset>
</form>
