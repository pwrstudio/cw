<form class="ajaxForm" enctype="multipart/form-data" action="/api/meta">
    <fieldset>

        <div class="form-group">
            <label for="title">Title</label>
            <input id="title" name="title" type="text" value="{{title}}" placeholder="Title" class="input-sm form-control">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input id="description" name="description" type="text" value="{{description}}" class="input-sm form-control">
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" value="{{email}}" placeholder="email" class="input-sm form-control">
        </div>

        <div class="form-group">
            <button id="" name="" class="btn btn-primary">Submit</button>
        </div>

    </fieldset>
</form>